.row#carousel(ng-controller='CarouselController as vm')
    uib-carousel(active='vm.active', interval='vm.interval', no-wrap='vm.noWrapSlides')
        uib-slide(ng-repeat='slide in vm.slides track by slide.id', index='slide.id')
            img(ng-src='{{ slide.imgUrl }}')
            .carousel-caption
                #caption-title {{ vm.header}}
                p.caption-content {{ vm.caption1 }}
                p.caption-content {{ vm.caption2 }}
                .btn.btn-default.btn-primary(ng-click='vm.openCartSingle()')
                    span.text-center {{ vm.buttonLabel }}