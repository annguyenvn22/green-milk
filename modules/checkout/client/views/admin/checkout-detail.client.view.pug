// CUSTOMER INFORMATION
.row
    .col-lg-6
        p {{ vm.customerNameLabel }}
            span ten khach hang
        p {{ vm.customerAddressLabel }}
            span dong nai
        p {{ vm.customerPhoneNoLabel }}
            span 0123
        p {{ vm.totalMoneyLabel }}
            span 20k
    .col-lg-6
        .form-group
            label.label-control.col-lg-4(for='status-selection') {{ vm.statusLabel }}
            .col-lg-8
                select.form-control(ng-model='vm.statusDefault' ng-options='option.display for option in vm.options')

// GRID
.row
    .col-lg-12
        div(ui-grid='vm.gridOptions')
